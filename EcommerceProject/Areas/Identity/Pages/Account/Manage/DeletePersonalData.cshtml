@page
@model DeletePersonalDataModel

@{
    ViewData["Title"] = "Delete Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h3 class="text-center my-4">@ViewData["Title"]</h3>

<div class="container">
    <div class="alert alert-warning text-center" role="alert">
        <p>
            <strong>Deleting this data will permanently remove your account, and this cannot be recovered.</strong>
        </p>
    </div>

    <div class="card">
        <div class="card-header text-center bg-danger text-white">
            <h5 class="mb-0">Confirm Account Deletion</h5>
        </div>
        <div class="card-body">
            <form id="delete-user" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>
                
                @if (Model.RequirePassword)
                {
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Please enter your password." />
                        <label asp-for="Input.Password" class="form-label">Password</label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                }

                <button class="w-100 btn btn-lg btn-danger" type="submit">Delete Data and Close My Account</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
