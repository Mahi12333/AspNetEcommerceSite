@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Corona Admin</title>
    <!-- plugins:css -->
    <link rel="stylesheet" href="~/assets/vendors/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="~/assets/vendors/css/vendor.bundle.base.css">
    <!-- Add Font Awesome CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <!-- endinject -->
    <!-- Layout styles -->
    <link rel="stylesheet" href="~/assets/css/style.css">
    <!-- End layout styles -->
    <link rel="shortcut icon" href="~/assets/images/favicon.png" />
    <style>
        .full-page-wrapper {
            display: flex;
            justify-content: center;
            height: 600px;
        }

        .from-control {
            display: flex;
            flex-direction: column;
            gap: 20px;
        }

        .back-button {
            position: relative;
            padding-left: 25px; /* Add padding to avoid text overlap */
        }

            .back-button::before {
                content: '';
                position: absolute;
                left: 10px; /* Adjust as needed */
                top: 50%;
                transform: translateY(-50%); /* Center the arrow vertically */
                border: solid transparent; /* Creates an arrow shape */
                border-width: 5px; /* Adjust size */
                border-right-color: white; /* Change this to match your button text color */
            }
    </style>
</head>
<body style="background-color: rgba(37, 139, 146, 0.301);">
    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="row w-100 m-0">
                <div class="content-wrapper full-page-wrapper d-flex align-items-center auth login-bg">
                    <div class="card col-lg-4 mx-auto">
                        <div class="card-body px-5 py-5" style="display: flex;
              flex-direction: column;
              gap: 10px;">
                            <!-- Display response message here -->
                            <div id="responseMessage" style="margin-top: 105px;"></div>
                            <h3 class="card-title text-left mb-3" style="text-align: center;">Verify Your Account</h3>
                            <form onsubmit="formSubmit(event)" class="from-control">
                                <div class="text-center" style="margin-left: 3rem;">
                                    <input type="hidden" id="token" value="<%= token %>">
                                    <input type="hidden" name="verify" value="true" id="verify">
                                    <button type="submit" class="btn btn-primary btn-block enter-btn">Submit</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <!-- content-wrapper ends -->
            </div>
            <!-- row ends -->
        </div>
        <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->
    <!-- plugins:js -->
    <script src="~/assets/vendors/js/vendor.bundle.base.js"></script>
    <!-- endinject -->
    <!-- inject:js -->
    <script src="~/assets/js/off-canvas.js"></script>
    <script src="~/assets/js/hoverable-collapse.js"></script>
    <script src="~/assets/js/misc.js"></script>
    <script src="~/assets/js/settings.js"></script>
    <script src="~/assets/js/todolist.js"></script>
    <!-- endinject -->
</body>
</html>
