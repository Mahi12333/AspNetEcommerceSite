@model CreateUserVM
@{
    ViewData["Title"] = "Add User Details";
}

<div class="content-wrapper">
    <div class="page-header">
        <h3 class="page-title"> Add User Details </h3>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">Forms</a></li>
                <li class="breadcrumb-item active" aria-current="page">Add User</li>
            </ol>
        </nav>
    </div>
    <div class="row">
        <div class="col-md-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <!-- Display Success Message if any -->
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success">
                            @TempData["SuccessMessage"]
                        </div>
                    }

                    <!-- Display Error Message if any -->
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger">
                            @TempData["ErrorMessage"]
                        </div>
                    }

                    <h4 class="card-title">User Details</h4>
                    <p class="card-description"> Fill out the form below </p>

                    <!-- Form Start -->
                    <form asp-action="Create" asp-controller="User" method="post" class="forms-sample">
                        <!-- Role Selection -->
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">Role</label>
                            <div class="col-sm-9">
                                <select asp-for="RoleId" class="form-control" asp-items="Model.Roles">
                                    <option value="">Select a Role</option>
                                </select>
                            </div>
                        </div>

                        <!-- Permission Selection -->
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">Permissions</label>
                            <div class="col-sm-9">
                                <div class="" style="display: flex; flex-wrap: wrap; gap:10px;">
                                    @foreach (var permission in Model.Permissions)
                                    {
                                        <div class="form-check form-check-inline" style="display: flex; justify-content: center;">
                                            <input type="checkbox" name="SelectedPermissions" value="@permission.Value" class="form-check-input" />
                                            <label class="form-check-label">@permission.Text</label>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>

                        <!-- Username -->
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">Username</label>
                            <div class="col-sm-9">
                                <input asp-for="UserName" class="form-control" placeholder="Username" />
                            </div>
                        </div>

                        <!-- Email -->
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">Email</label>
                            <div class="col-sm-9">
                                <input asp-for="Email" class="form-control" placeholder="Email" />
                            </div>
                        </div>

                        <!-- Mobile -->
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">Mobile</label>
                            <div class="col-sm-9">
                                <input asp-for="Mobile" class="form-control" placeholder="Mobile number" />
                            </div>
                        </div>

                        <!-- Password -->
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">Password</label>
                            <div class="col-sm-9">
                                <input asp-for="Password" class="form-control" placeholder="Password" type="password" />
                            </div>
                        </div>

                        <!-- Confirm Password -->
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">Confirm Password</label>
                            <div class="col-sm-9">
                                <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm Password" type="password" />
                            </div>
                        </div>

                        <!-- Form Buttons -->
                        <button type="submit" class="btn btn-primary mr-2">Submit</button>
                        <a asp-action="Index" asp-controller="User" class="btn btn-success mr-2">View</a>
                        <button type="reset" class="btn btn-dark">Cancel</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
